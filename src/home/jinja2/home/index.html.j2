<h2 class="sub-header">设备列表</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>No.</th>
        <th>设备名字</th>
        <th>IP</th>
        <th>所属人</th>
        <th>到期时间</th>
      </tr>
    </thead>
    <tbody>
      {% for a,b,c,d,e in list %}
        <tr>
          <td>{{ a }}</td>
          <td>{{ b }}</td>
          <td>{{ c }}</td>
          <td>{{ d }}</td>
          <td>{{ e }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock %}
